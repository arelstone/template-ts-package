name: Publish
on:
  push:
    branches:
      - master
jobs:
  publish:
    name: Publish
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - uses: paralenz/actions/setup-node@master
        with:
          token: ${{ secrets.NPM_AUTH_TOKEN }}
      - run: yarn lint
      - run: yarn test --passWithNoTests
      - run: yarn build
      - run: yarn publish
